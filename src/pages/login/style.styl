@import '../../style.styl'
$title = #0b0b0b
$text = #c2c2c2
$formInputColor=#0182ff
.loginPage
    width: 100%
    min-height: 100vh
    position relative
    display: flex
    justify-content: center
    //左上角的标签样式
    .title
        font-weight: lighter
        position absolute
        font-size: 30px
        left 21vw
        top 8vh
        z-index 1003
    //中间的box的样式
    .wrapper
        position relative
        width 60vw
        height 76vh
        background-color: white
        margin-top: 120px
        box-shadow: 0px 0px 30px 10px rgba(0,0,0,.1)
        display: flex
        flex-flow: column nowrap
        overflow: hidden
        //回退按钮组件
        .back
           width: 100%
           margin: 30px
           font-size: 14px
           vertical-align: middle
           cursor: pointer
        
           //回退按钮图标
           .back-icon
               font-size: 14px
               color:$blue
               margin-right: 12px
           //回退按钮文字
           .back-text
               color: $black
               //调整字距
               letter-spacing: 1px
        //大圆
        .bigCircle
            transform: scale(3.0)
            position absolute
            right -100px
            top 0
            z-index 1003
        //小圆
        .smallCircle
            transform: scale(1.5)
            position absolute
            left -120px
            bottom -120px
            z-index: 1003
        .card
            z-index: 1002
            margin-left: 1em
            width: 30vw
            flex 1
            display: flex
            justify-content: left 
            align-items: flex-start
            border:0 
            .swiper-container
                width: 30vw
                height: 30vw
                .swiper-wrapper
                    .swiper-slide
                       width:30vw 
                       height: 30vw
                       display flex
                       flex-flow: column nowrap
                       justify-content: flex-start
                       align-items: center
                       .swiper-title
                           font-weight: bold
                           font-size: 16px
                           display: flex
                           margin-top: 1.5em
                           margin-bottom: 1.5em
                           letter-spacing: 2px
                           color: $title
                        .swiper-text
                            letter-spacing: 2px
                            line-height: 16px
                            height: 16px
                            font-weight:medium
                            color: $text
                            font-size: 13px
                            width: 350px
                            text-align center
                        .swiper-picture
                            width: 200px
                            height: 200px
                            margin-top: 2em
        .form
            z-index: 1004
            width: 23vw
            // height: 400px
            position absolute
            top 4vh
            right 3vw
            background-color: white
            box-shadow: 0px 0px 30px 10px rgba(0,0,0,.1)
            display flex
            flex-flow: column nowrap
            padding: 35px
            .form-title
                font-weight: 600
                letter-spacing: 1px
                color: $title
                width: 100%
                text-align: center
                line-height: 15px
                height: 15px
                font-size: 16px
                margin-bottom: 10px
            .form-input
                width 100%
                vertical-align:middle
                line-height: 40px
                height: 40px
                margin-top: 20px
                .form-ador
                    height: 24px
                    line-height: 24px
                    display: flex
                    padding: 5px
                    flex-flow: column nowrap
                    justify-content: center
                    align-items: center
                    border-right-width: 0.5px
                    // border-right-color:$formInputColor
                    border-right-style: solid
                .captcha
                   cursor pointer
                   widows 3.2em
                   height 1.6em
            //忘记密码链接的样式
            .forget-link-line
                width: 100%
                text-align: right 
                line-height: 20px
                height: 20px
                vertical-align: middle
                .forget-link
                    color $text
                    color #8490a6
                    font-size: 10px
                    &:hover
                        color: $formInputColor
                        cursor pointer
            .policy-line
                font-size: 12px
                width: 100%
                input 
                   color: $formInputColor
                .MuiFormControlLabel-root
                    margin-right: 0px
                .policy
                    font-size: 12px
                .MuiCheckbox-colorSecondary.Mui-checked
                        color: $formInputColor
                .policy-link
                    color: $formInputColor
            .policy-error
                color: #f44336
                font-size: 0.75rem;
            .login-button
                width: 100%
                padding 0px
                vertical-align: middle               
                height: 40px
                background-color: $formInputColor
                margin-top: 10px
                box-shadow: 0px 0px 10px 1px $formInputColor
                line-height: 40px
                border-radius: 10px
                color: #fefefd
            .register-link
                cursor pointer
                color #8490a6
                font-size: 10px
                text-align: center
                margin-top: 10px
                margin-bottom: 10px
                &:hover
                        color: $formInputColor
            hr
              color: $formInputColor
            .third-login
                vertical-align: middle
                line-height: 30px
                height: 30px
                display: flex
                flex-flow: row nowrap
                justify-content: flex-start
                align-items: center
                .weibo-icon
                   margin-left: 10px
                   font-size: 30px
                   color #d32124
                   margin-right: 5px
                .qq-icon
                    color #4a9afd
                    font-size: 25px
                    margin-right: 5px
                .weixin-icon
                   color #18c435
                   font-size: 25px
                .weibo-text
                    font-size: 10px
                    margin-left: 5px
   

                    
    .MuiInput-underline
        &:before
           border-bottom: 1px solid rgba(0,0,0,.1)
        &:hover:not(.Mui-disabled):before
           border-bottom: 1px solid $formInputColor !important
        &:after
           border-bottom: 1px solid $formInputColor
    .alert-wrapper
        width: 300px
        height: 50px
        border: none
        border-radius:15px
        color: $text
        line-height: 50px
        vertical-align: middle
        text-align: center
        background-color: white
        box-shadow: 0px 0px 10px 1px $formInputColor
        &.success
            box-shadow: 0px 0px 1px 1px #4caf50
            color: #4caf50
        &.error
            box-shadow: 0px 0px 1px 1px #f44336
            color #f44336
@media screen and (max-width :767px)
    .loginPage
        .wrapper
            margin: 0
            height 100vh
            width 100vw
            .swiper-container
                display none !important
            .card
                display none
        .bigCircle
            transform: scale(1.5) !important
        .form
            width:80vw !important
            left 10vw
            top:20vh !important
            input::placeholder
                font-size: 0.8em !important
            hr
                    margin: 0.6em 0
@media screen and (min-width :768px) and (max-width: 1080px)
    .loginPage
        .title
            left 11vw
            top 4vh
        .wrapper
            width 80vw
            height 40vh
            .card
                width: 40vw
                .swiper-container
                    width: 40vw
                    height: 40vw
                    .swiper-wrapper
                        .swiper-slide
                            width:40vw !important
                            height: 40vw
                            .swiper-text
                                font-size: 0.4em
                            .swiper-title
                                font-size: 0.8em
            .form
                width: 30vw
                top: 2vh
                right 3vw
                padding: 1em
                .makeStyles-root-3
                    margin: 0
                    margin-top: 0.5em
                .captcha
                    width: 4em
                    height: 2em !important
                .login-button
                    width: 100%
                    height 3vh
                .policy-line
                    span
                        font-size:0.5em !important
                hr
                    margin: 0.6em 0
            
