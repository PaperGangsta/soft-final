$borderRadius = 10px//记录边框的圆角
$boxShadow = 0px 0px 30px 10px rgba(0,0,0,.1)
$formInputColor=#0182ff
.renewWrapper
   width: 100%
   padding: 20px
   display: flex
   flex-flow: row nowrap
   justify-content: center
   .infoLine
         display: flex
         justify-items: center
         .infoCard
            box-shadow: $boxShadow
            border-radius: $borderRadius
            width: 200px
            margin-right: 10px

    .renewbookWrapper
        width: 1100px
        box-shadow: $boxShadow
        border-radius: $borderRadius
        background-color: white
        .tipsCard
            border-radius: $borderRadius $borderRadius 0px 0px
            width: 1000px
            .important
                color red
        .table
            width 100%
            border-radius: 0px 0px $borderRadius $borderRadius
        .oprationbuttons
            padding: 10px
            width: 100%
            display: flex
            justify-content: space-between
            border-radius: 0px 0px $borderRadius $borderRadius
        .remainDateInfo
            display: flex
            justify-content: space-between
            .remainDateInfoText
               width: 100px  
        .successText
            color: white
            border-color: #FFB90F
            background-color: #FFb90f
.dialogBookName
    color $formInputColor

.dialogBookText
    padding: 0px 24px
