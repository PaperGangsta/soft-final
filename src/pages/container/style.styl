  }
}

.alert-wrapper
    width: 300px;
    height: 50px;
    border: none;
    border-radius:15px;
    color: $text; 
    line-height: 50px;
    vertical-align: middle;
    text-align: center;
    background-color: white;
    box-shadow: 0px 0px 10px 1px $formInputColor
    &.success
        box-shadow: 0px 0px 1px 1px #4caf50
        color: #4caf50
    &.error
        box-shadow: 0px 0px 1px 1px #f44336
        color #f44336
