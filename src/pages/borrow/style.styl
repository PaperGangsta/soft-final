$borderRadius = 10px//记录边框的圆角
$boxShadow = 0px 0px 30px 10px rgba(0,0,0,.1)
.borrowWrapper
   width: 100%
   padding: 20px
   display: flex
   flex-flow: column nowrap
   align-items: center
   .stepBar
      max-width:  1200px
      width: 100%
      background-color: white
      border-radius: $borderRadius
      padding 20px
      margin: 10px
      box-shadow:$boxShadow
   .infoLine
         display: flex
         justify-items: center
         .infoCard
            box-shadow: $boxShadow
            border-radius: $borderRadius
            width: 200px
            margin-right: 10px