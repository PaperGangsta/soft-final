.forgot-password-wrapper
    width: 100vw
    min-height:  100vh
    position relative
    overflow-x: hidden
    display: flex
    justify-content: center
    align-items: bottom 
    //左上角的标签样式
    .buttom-box
        width: 800px
        position absolute 
        top 100px
        height: fit-content
        background-color: white
        box-shadow: 0px 0px 30px 10px rgba(0,0,0,.1)
        display: flex
        flex-flow: row nowrap
        position relative
        .card
            margin-left: 10px
            width: 400px
            flex 1
            display: flex
            justify-content: left 
            align-items: center 
            .swiper-container
                width: 400px
                height: 400px
                .swiper-wrapper
                    .swiper-slide
                        width: 400px
                        height: 400px
                        display flex
                        flex-flow: column nowrap
                        justify-content: flex-start
                        align-items: center
                        .swiper-title
                            font-weight: bold
                            font-size: 16px
                            display: flex
                            margin-top: 40px
                            margin-bottom: 30px
                            letter-spacing: 2px
                            color: $title
                        .swiper-text
                            letter-spacing: 2px
                            line-height: 16px
                            height: 16px
                            font-weight:medium
                            color: $text
                            font-size: 13px
                            width: 350px
                            text-align center
                        .swiper-picture
                            width: 200px
                            height: 200px
                            margin-top: 25px